{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@design/*": ["src/design/*"],
      "@engine/*": ["src/engine/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx",
    "checkJs": true,
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}